{{#this}}
<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">{{name}}</h3>
    </div>
    <div class="panel-body">
        <div class="embed-responsive embed-responsive-16by9">
            <iframe class="embed-responsive-item" src="{{trailer}}"></iframe>
        </div>
    </div>
    <div class="panel-footer">{{description}}</div>
    <div class="panel-footer">Genre: {{genre}}</div>
    <div class="panel-footer">Rate: {{rate}}/10</div>
    <div class="panel-footer">Stars: {{actors}}</div>
</div>
{{/this}}